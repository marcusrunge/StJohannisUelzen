<resources>
    <!-- Base application theme for light mode -->
    <style name="Base.Theme.StJohannisUelzen" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryTranslucent">@color/purple_500
        </item> <!-- Review if actually translucent -->
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="tabBackground">@color/purple_500</item>
        <item name="stateSelectedColor">@color/purple_200</item>
        <item name="stateUnselectedColor">@color/white</item>
        <item name="actionOverflowButtonStyle">@style/OverFlowTheme</item>
        <item name="toolbarStyle">@style/OverflowToolbarStyle</item>
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="Theme.StJohannisUelzen" parent="Base.Theme.StJohannisUelzen" />

    <!-- App Widget Themes -->
    <style name="Theme.StJohannisUelzen.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <item name="appWidgetRadius">8dp</item>
        <item name="appWidgetPadding">0dp</item>
        <item name="appWidgetInnerRadius">4dp</item>
    </style>
    <style name="Theme.StJohannisUelzen.AppWidgetContainer" parent="Theme.StJohannisUelzen.AppWidgetContainerParent" />
    <style name="OverFlowTheme" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="tint">@color/white</item>
    </style>
    <style name="OverflowNavigationTheme" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="tint">@color/white</item>
    </style>
    <style name="OverflowToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextColor">@android:color/white</item>
        <item name="navigationIconTint">@android:color/white</item>
        <item name="android:tint">@android:color/white</item> <!-- For API level < 21 -->
        <item name="tint">@android:color/white</item> <!-- For API level >= 21 -->
    </style>
</resources>