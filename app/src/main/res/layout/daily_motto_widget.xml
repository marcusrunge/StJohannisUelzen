<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/appwidget_root"
    style="@style/Widget.StJohannisUelzen.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.StJohannisUelzen.AppWidgetContainer">

    <RelativeLayout
        style="@style/Widget.StJohannisUelzen.AppWidget.InnerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/appwidget_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:background="#8e24aa"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:text="@string/app_name"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="@string/app_widget_description"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/appwidget_quote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/appwidget_title"
            android:layout_marginHorizontal="16dp"
            android:text="@string/appwidget_previewquote"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/appwidget_quoteverse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/appwidget_quote"
            android:layout_marginHorizontal="16dp"
            android:text="@string/appwidget_previewquoteverse"
            android:textColor="@color/white"
            android:textStyle="italic" />

        <LinearLayout
            android:id="@+id/appwidget_mottodivider"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/appwidget_quoteverse"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="6dp"
            android:background="@color/white"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/appwidget_inspiration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/appwidget_mottodivider"
            android:layout_marginHorizontal="16dp"
            android:text="@string/appwidget_previewinspiration"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/appwidget_inspirationverse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/appwidget_inspiration"
            android:layout_marginHorizontal="16dp"
            android:text="@string/appwidget_previewinspirationverse"
            android:textColor="@color/white"
            android:textStyle="italic" />
    </RelativeLayout>
</LinearLayout>