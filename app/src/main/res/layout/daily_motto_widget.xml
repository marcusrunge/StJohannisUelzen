<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/appwidget_root"
    style="@style/Widget.StJohannisUelzen.AppWidget.Container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.StJohannisUelzen.AppWidgetContainer">

    <RelativeLayout
        style="@style/Widget.StJohannisUelzen.AppWidget.InnerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/appwidget_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="false"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:text="@string/app_name"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:text="@string/app_widget_description"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/appwidget_titledivider"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/appwidget_title"
            android:background="?android:attr/textColorPrimary"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/appwidget_quote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/appwidget_titledivider"
            android:layout_marginHorizontal="16dp"
            android:textColor="?android:attr/textColorPrimary"
            android:text="Ihr sollt nicht stehlen noch lügen noch betrügerisch handeln einer mit dem andern."/>

        <TextView
            android:id="@+id/appwidget_quoteverse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/appwidget_quote"
            android:layout_marginHorizontal="16dp"
            android:textColor="?android:attr/textColorPrimary"
            android:textStyle="italic"
            android:text="3. Mose 19,11"/>

        <LinearLayout
            android:id="@+id/appwidget_mottodivider"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/appwidget_quoteverse"
            android:layout_marginHorizontal="16dp"
            android:layout_marginVertical="6dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="?android:attr/textColorPrimary"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/appwidget_inspiration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/appwidget_mottodivider"
            android:layout_marginHorizontal="16dp"
            android:textColor="?android:attr/textColorPrimary"
            android:text="Seid allesamt gleich gesinnt, mitleidig, brüderlich, barmherzig, demütig. Vergeltet nicht Böses mit Bösem oder Scheltwort mit Scheltwort, sondern segnet vielmehr, weil ihr dazu berufen seid, auf dass ihr Segen erbt."/>

        <TextView
            android:id="@+id/appwidget_inspirationverse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/appwidget_inspiration"
            android:layout_marginHorizontal="16dp"
            android:textColor="?android:attr/textColorPrimary"
            android:textStyle="italic"
            android:text="1. Petrus 3,8-9"/>
    </RelativeLayout>
</LinearLayout>